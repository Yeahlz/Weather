<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:textSize="20sp"
        android:id="@+id/weather_form_tv_weather"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="39dp"
        android:layout_below="@+id/weather_form_tv_countryname"
        android:layout_alignParentStart="true" />

    <TextView
        android:textSize="20sp"
        android:id="@+id/weather_form_tv_hightemperature"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="73dp"
        android:layout_alignBaseline="@+id/weather_form_tv_weather"
        android:layout_alignBottom="@+id/weather_form_tv_weather"
        android:layout_alignParentEnd="true" />

    <TextView
        android:textSize="20sp"
        android:id="@+id/weather_form_tv_lowtemperature"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/weather_form_tv_string"
        android:layout_alignBottom="@+id/weather_form_tv_string"
        android:layout_toStartOf="@+id/weather_form_tv_hightemperature"
        android:layout_marginEnd="33dp" />

    <TextView
        android:textSize="20sp"
        android:id="@+id/weather_form_tv_countryname"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/weather_form_tv_weather" />

    <TextView
        android:textSize="20sp"
        android:id="@+id/weather_form_tv_string"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="~~"
        android:layout_alignBaseline="@+id/weather_form_tv_hightemperature"
        android:layout_alignBottom="@+id/weather_form_tv_hightemperature"
        android:layout_toStartOf="@+id/weather_form_tv_hightemperature" />


</RelativeLayout>