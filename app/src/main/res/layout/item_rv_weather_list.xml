<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:weightSum="1">


        <TextView
            android:textColor="#000000"
            android:text="date"
            android:id="@+id/weather_list_tv_date"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:gravity="center"
            android:textSize="20sp" />

        <TextView
            android:textColor="#000000"
            android:text="high"
            android:id="@+id/weather_list_tv_hightemperature"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:gravity="center"
            android:textSize="20sp"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/weather_list_tv_String" />

        <TextView
            android:textColor="#000000"
            android:text="low"
            android:id="@+id/weather_list_tv_lowtemperature"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:gravity="center"
            android:textSize="20sp"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/weather_list_tv_weather" />

        <TextView
            android:textColor="#000000"
            android:text="weather"
            android:id="@+id/weather_list_tv_weather"
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:gravity="center"
            android:textSize="20sp"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/weather_list_tv_date" />

        <TextView
            android:textColor="#000000"
            android:id="@+id/weather_list_tv_String"
            android:layout_width="20dp"
            android:layout_height="30dp"
            android:gravity="center"
            android:text="~~"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/weather_list_tv_lowtemperature" />

</RelativeLayout>